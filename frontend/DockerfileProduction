FROM node:12.13.0

# Create app directory
RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

# Install app dependencies
COPY package.json /usr/src/app/
RUN yarn install

# Bundle app source
COPY . /usr/src/app

# Build and optimize react app
RUN yarn build

# Expose Port
EXPOSE 80

# Run command defined in package.json
CMD [ "yarn", "run", "start:server" ]
