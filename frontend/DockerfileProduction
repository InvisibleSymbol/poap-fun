FROM node:12.13.0

# Create app directory
RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

# Install app dependencies
COPY package.json /usr/src/app/
RUN npm install -g yarn
RUN yarn install

# Bundle app source
COPY . /usr/src/app

# Expose Port
EXPOSE 3000

# Run command defined in package.json
CMD [ "yarn", "start:server" ]
